set index_format="%4C %Z %{%b %d} %-20.20L (%4l) %s"
set status_format='-%r-GMail: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p?  Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%>-(%P)---'
